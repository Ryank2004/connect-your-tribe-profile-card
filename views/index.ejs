<%- include('./partials/head') %>

 <div class="container">
  <div class="card">
    <div class="front">
          <h1><%= data.name %> <%= data.surname %></h1>
              <p>Frontend designer en developer</p>
    <div class="front-image-container">
       <img src="<%= data.avatar %>" alt="profielfoto"> 
    </div>
  </div>
    <div class="back">
      <div class="back-content">
        <div class="biografie">
          <h2>Biografie</h2>
            <p> <%= data.bio %> </p>
        </div>
      <div class="contactgegevens">
          <h2>Contactgegevens</h2>
            <ul>
              <li><p> E-mail: <%= data.email %> </p></li>
              <li><p> Telefoonnummer: <%= data.phone_number %> </p</li>
              <li><p> Github: <%= data.github_handle %> </p</li>
            </ul>
        </div>
      </div>
    </div>
  </div>
</div> 

<%- include('./partials/foot') %>
